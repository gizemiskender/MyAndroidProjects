<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sumak"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/image"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartingPoint"
            android:label="Start Point" >
            <intent-filter>
                <action android:name="com.example.sumak.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu"
            android:label="Menu" >
            <intent-filter>
                <action android:name="com.example.sumak.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Prefs"
            android:label="Preference" >
            <intent-filter>
                <action android:name="com.example.sumak.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs"
            android:label="About Us"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.example.sumak.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextPlay"
            android:label="Text Play" >
        </activity>
        <activity
            android:name=".Email"
            android:label="Email" >
        </activity>
        <activity
            android:name=".Camera"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
 >
        </activity>
        <activity
            android:name=".Data"
            android:label="Data" >
        </activity>
        <activity
            android:name=".GFX"
            android:label="GFX" >
        </activity>
        <activity
            android:name=".OpenedClass"
            android:label="Data" >
        </activity>
        <activity
            android:name=".GFXSurface"
            android:label="GFX" >
        </activity>
    </application>

</manifest>